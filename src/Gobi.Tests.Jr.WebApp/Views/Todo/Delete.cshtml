@model Gobi.Test.Jr.Domain.TodoItem


@{
    ViewData["Title"] = "Delete Item";
}



<h1>Tem certeza que deseja excluir a tarefa?</h1>

<dl class="row">
    <dt class="col-sm-2">
        Finalizado:
    </dt>
    <dd class="col-sm-10">
        @if (Model.Completed)
        {
            <span>Sim</span>
        }
        else
        {
            <span>Não</span>
        }
    </dd>
    <dt class="col-sm-2">
        Tarefa:
    </dt>
    <dd class="col-sm-10">
        @Model.Description
    </dd>
</dl>

<form asp-action="DeleteItem" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Confirmar exclusão</button>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</form>